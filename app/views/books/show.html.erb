
  <div class='container px-5 px-sm-0'>
    <div class='row'>

      <div class='col-md-3'>

        <%= render 'users/info', user: @user %>

        <%= render 'books/new', books: @books %>

      </div>

      <div class='col-md-8 offset-md-1'>

        <h2>Book detail</h2>

        <table class='table table-hover table-inverse'>
          <thead>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @books.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
              <td><%= link_to @books.title, book_path(@books.id) %></td>
              <td><%= @books.body %></td>
              <% if @user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@books.id), class: 'btn btn-sm btn-success' %></td>
                <td><%= link_to "Destroy", "/books/#{@books.id}", method: :delete, data: {confirm:"本当に消しますか？"}, class: 'btn btn-sm btn-danger' %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>